<div class="form-group" ng-controller = "infoController">
		<table class="table table-bordered table-hover table-active">
			<tr>
				<th>About</th>
				<th>Birthdate</th>
				<th>Contact Information</th>
				<th>Address</th>
                <th>Ebay_handle</th>
			
                
			</tr>
			<tr ng-repeat="product in allproducts">
				<td>{{product.about}}</td>
				<td>{{product.Birthday}}</td>
				<td>{{product.Contact}}</td>
				<td>{{product.Address}}</td>
                <td>{{product.Ebay_handle}}</td>
                
			
                
			</tr>
            
            
		</table>
</br>
<div class= "form-group">


    <div class = "table-active">
</br>
            <h3 class = "active">Update contact information </h3>
</br></br>
<form class="active">
    Enter your birthdate  <input type="date" class="form-control" id="Birthday" placeholder=" Birthdate" name= "Birthday" ng-model = "Birthday"> </br>
    Tell us about yourself  <input type="text" class="form-control" id="about" placeholder="about yourself" name= "about" ng-model = "about"> </br>
    Ebay Handle<input type="text" class="form-control" id="Ebay_handle" placeholder="enter username" name= "Ebay_handle" ng-model = "Ebay_handle"> </br>
    Enter your Address  <input type="text" class="form-control" id="address" placeholder="address" name= "Address" ng-model = "Address"> </br>
    Enter your Contact no  <input type="text" class="form-control" id="contact" placeholder="contact number" name= "Contact" ng-model = "Contact"> </br>

        <button type="submit" class="btn btn-default" ng-click= addinfo()>Update information</button>
</form>
  </div>
</div>

